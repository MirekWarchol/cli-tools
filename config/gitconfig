[alias]
	a = add
	amend = commit --amend
	b = branch
	c = checkout
	d = diff
	discard = stash save "discarded changes"

	# fixup a previous commit and use rebase to merge the fixup.
	fixup = !sh -c 'git commit --fixup $1 && \
		  git stash && \
		  git rebase -i --autosquash $1~1 && \
		  git stash pop' -

        g1 = grep --color=always -n -C1
        g2 = grep --color=always -n -C2
        g3 = grep --color=always -n -C3
        g5 = grep --color=always -n -C5
	graphviz = "!f() { echo 'digraph git {' ; git log --pretty='format:  %h -> { %p }' \"$@\" | sed 's/[0-9a-f][0-9a-f]*/\"&\"/g' ; echo '}'; }; f"

	h = help
	k = commit
	l = log
	list-all-files = ls-tree -r --name-only --full-tree
	rb = rebase
	rs = reset
	s = status
	st = status

[color]
	ui = always

[core]
	# display non-ASCII characters instead of quoting them:
	quotepath = false
	editor = nano

[help]
	autocorrect = 10

[rebase]
	autosquash = true

[rerere]
	# Reuse recorded resolution of conflicted merges
	# see `man git-rerere'
	enabled = true

